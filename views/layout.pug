    div(class='navbar navbar-expand-lg navbar-dark', style='background-color: #202945;margin-top:25px,padding:20px;')
      ul(class='navbar-nav mr-auto')
        li(class='navbar-item text-light') Mongo Tribes
      ul(class='navbar-nav ml-auto')
        if username
          li(class='nav-item')
            div(class='dropdown show')
              a(class="nav-link btn btn-primary dropdown-toggle text-light" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") #{username}
              div(class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown")
                a(class="dropdown-item" href="/logout?_method=DELETE") Logout
        else
          a(class='nav-item navbar-text' href='/register') Register now!
    br
    div(class='row')
    div(class='col-md-8 offset-md-2', style='background-color: #202945;margin-top:25px,padding:20px;')
      block content
